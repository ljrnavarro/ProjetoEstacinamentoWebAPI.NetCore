@model WebAplicacaoEstaciona.Models.Veiculo

@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Veículo</h2>

@using (Html.BeginForm())
{
<h2>Caminhão</h2>
@Html.AntiForgeryToken()

<section class="container form-horizontal well">
    <fieldset>
        <legend>Dados:</legend>
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.HiddenFor(model => model.Id, new { @class = "control-label col-md-2" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Placa, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Placa, new { @class = "Placa" })
                @Html.ValidationMessageFor(model => model.Placa)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Modelo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Modelo)
                @Html.ValidationMessageFor(model => model.Modelo)
            </div>
        </div>


        <div class="col-md-12">
            <div>
                <p>
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "veiculo")'">Voltar</button>
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                </p>
            </div>
        </div>


    </fieldset>
</section>
}

@section scripts {
    <script>
        $(document).ready(function () {
            $('#Placa').mask('SSS-9999');
        });
    </script>
}